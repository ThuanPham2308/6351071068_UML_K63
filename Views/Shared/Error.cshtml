@model ErrorViewModel
@{
    ViewData["Title"] = "Đã xảy ra lỗi";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lỗi hệ thống</title>
    <link href="~/shared/css/login.css" rel="stylesheet" />
    <link href="~/shared/css/error.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="header">
        <img src="@Url.Content("~/shared/images/logo_bmcntt.png")" alt="Logo" class="logo" />
        <p>HỆ THỐNG ĐỒ ÁN, LUẬN VĂN BỘ MÔN CÔNG NGHỆ THÔNG TIN TRƯỜNG ĐẠI HỌC GTVT - PHÂN HIỆU TP.HCM</p>
    </div>

    <div class="error-container">
        <h1><i class="fas fa-exclamation-triangle"></i> Đã xảy ra lỗi</h1>
        <p>Hệ thống gặp sự cố khi xử lý yêu cầu của bạn. Vui lòng thử lại sau.</p>

        @if (Model?.ShowRequestId == true)
        {
            <p><strong>Mã lỗi:</strong> <code>@Model.RequestId</code></p>
        }
        <a href="/Home/Index">Quay về trang chủ</a>
    </div>

    <div class="footer">2025 © PhamVanThuan</div>
</body>
</html>
