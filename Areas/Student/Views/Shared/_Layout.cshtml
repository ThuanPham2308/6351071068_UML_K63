<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/student/css/layout.css")" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Sinh viên - Hệ thống quản lý đồ án</title>
</head>
<body>
    <div class="student-control">
        <div class="sidebar">
            <div class="student-profile">
                <img src="@Url.Content(ViewData["Avatar"]?.ToString() ?? "~/shared/images/default-avatar.jpg")"
                     alt="Student Avatar" class="student-avatar" />
                <p class="student-name">@ViewData["TenNguoiDung"]</p>
            </div>

            <nav class="sidebar-menu">
                <a href="/Student/PostManagement/Index" id="post-management">
                    <i class="fa-solid fa-newspaper"></i> Xem bài đăng
                </a>

                <a href="/Student/TopicRegistration/Index" id="topic-registration">
                    <i class="fa-solid fa-file-signature"></i> Đăng ký đề tài
                </a>

                <a href="/Student/OutlineSubmission/Index" id="outline-submission">
                    <i class="fa-solid fa-file-upload"></i> Nộp kế hoạch đề cương
                </a>

                <a href="/Student/ProgressUpdate/Index" id="progress-update">
                    <i class="fa-solid fa-chart-line"></i> Cập nhật tiến độ đồ án
                </a>

                <a href="/Student/ThesisSubmission/Index" id="thesis-submission">
                    <i class="fa-solid fa-file-circle-check"></i> Nộp luận văn hoàn chỉnh
                </a>

                <a href="/Student/Setting/Index" id="setting">
                    <i class="fa-solid fa-gear"></i> Cài đặt
                </a>

                <a href="/Student/Repository/Index" id="repository">
                    <i class="fa-solid fa-archive"></i> Xem kho lưu trữ
                </a>

                <a href="/Home/Login" id="logout" method="post">
                    <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                </a>
            </nav>
        </div>

        <div class="main-content">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>
</body>
</html>
