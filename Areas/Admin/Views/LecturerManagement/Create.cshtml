@model BTL_UML.ViewModels.GiangVienViewModel

@{
    ViewData["Title"] = "Thêm giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/admin/css/student-management.css")" rel="stylesheet" />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-area="Admin" asp-controller="LecturerManagement" asp-action="Create" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label>Họ tên <span class="text-danger">*</span></label>
        <input name="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Ngày sinh <span class="text-danger">*</span></label>
        <input name="NgaySinh" type="date" class="form-control" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Giới tính <span class="text-danger">*</span></label>
        <select name="GioiTinh" class="form-control">
            <option value="">-- Chọn giới tính --</option>
            <option>Nam</option>
            <option>Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Địa chỉ <span class="text-danger">*</span></label>
        <input name="DiaChi" class="form-control" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Quê quán <span class="text-danger">*</span></label>
        <input name="QueQuan" class="form-control" />
        <span asp-validation-for="QueQuan" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Ảnh đại diện</label>
        <input name="AnhDaiDien" class="form-control" />
        <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Số CMND <span class="text-danger">*</span></label>
        <input name="SoCmnd" class="form-control" />
        <span asp-validation-for="SoCmnd" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Email <span class="text-danger">*</span></label>
        <input name="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Số điện thoại <span class="text-danger">*</span></label>
        <input name="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Tên đăng nhập <span class="text-danger">*</span></label>
        <input name="TenDangNhap" class="form-control" />
        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Chức vụ <span class="text-danger">*</span></label>
        <select name="ChucVu" class="form-control">
            <option value="">-- Chọn chức vụ --</option>
            <option>Trưởng Bộ môn</option>
            <option>Phó Bộ môn</option>
            <option>Giảng viên</option>
            <option>Trợ giảng</option>
        </select>
        <span asp-validation-for="ChucVu" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Chuyên môn <span class="text-danger">*</span></label>
        <select name="ChuyenMon" class="form-control">
            <option value="">-- Chọn chuyên môn --</option>
            <option>CNTT</option>
            <option>PM</option>
            <option>Mạng</option>
            <option>Dữ liệu</option>
            <option>AI</option>
            <option>Hệ thống</option>
            <option>Phân tích</option>
            <option>Lập trình</option>
        </select>
        <span asp-validation-for="ChuyenMon" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <label>Học vị <span class="text-danger">*</span></label>
        <select name="HocVi" class="form-control">
            <option value="">-- Chọn học vị --</option>
            <option>Kỹ sư</option>
            <option>Thạc sĩ</option>
            <option>Tiến sĩ</option>
            <option>Phó giáo sư</option>
            <option>Giáo sư</option>
        </select>
        <span asp-validation-for="HocVi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Thêm</button>
        <a href="/Admin/LecturerManagement/Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
